<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_send_white_24dp"
    tools:context=".messages_view.MessagesView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/message_history_user_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/message_history_user_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:text="User Data"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/message_history_user_photo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/message_history_user_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Connection Status"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/message_history_user_photo"
                app:layout_constraintTop_toBottomOf="@+id/message_history_user_data" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_history_list"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:paddingBottom="65dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:layout_margin="8dp"
            android:id="@+id/add_message"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textColor="@android:color/black"
            android:hint="@string/message"
            android:inputType="textMultiLine"
            android:layout_weight="11"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_margin="1dp"
            android:id="@+id/push_message"
            android:theme="@style/fab_color"
            android:layout_gravity="center"
            android:src="@drawable/ic_send_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>